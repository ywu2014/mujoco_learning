<mujoco model="simple_robot">
  <!-- 设置角度单位为弧度 -->
  <compiler angle="radian"/>
  <asset>
    <!-- 天空纹理 -->
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <!-- 地面纹理及材质 -->
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>
  <worldbody>
    <!-- 灯光 -->
    <light pos="0 0 1.5" dir="0 0 -1" type="directional"/>
    <!-- 地面 -->
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- 底座 -->
    <body name="base_link" pos="0 0 0.05">
      <geom type="box" size="0.15 0.15 0.05" rgba="0 0.5 0.5 1"/>
      <!-- link1 -->
      <body name="link1" pos="0 0 0.1">
        <joint name="joint1" pos="0 0 0" axis="0 0 1" range="-3.14 3.14"/>
        <geom type="cylinder" size="0.05 0.05" rgba="1 1 0 1"/>
        <!-- link2 -->
        <body name="link2" pos="0 0 0.2">
          <joint name="joint2" pos="0 0 -0.15" axis="1 0 0" range="-3.14 3.14"/>
          <geom type="cylinder" size="0.05 0.15" rgba="0 1 0 1"/>
          <!-- link3 -->
          <body name="link3" pos="0 0 0.3">
            <joint name="joint3" pos="0 0 -0.15" axis="1 0 0" range="-3.14 3.14"/>
            <geom type="cylinder" size="0.05 0.15" rgba="0 0 1 1"/>
            <!-- link4 -->
            <body name="link4" pos="0 0 0.3">
              <joint name="joint4" pos="0 0 -0.15" axis="1 0 0" range="-3.14 3.14"/>
              <geom type="cylinder" size="0.05 0.15" rgba="1 0 0 1"/>
              <!-- link5 -->
              <body name="link5" pos="0 0 0.3">
                <joint name="joint5" pos="0 0 -0.15" axis="1 0 0" range="-3.14 3.14"/>
                <geom type="cylinder" size="0.05 0.15" rgba="0 1 0 1"/>
                <!-- gripper_base_link -->
                <body name="gripper_base_link" pos="0 0 0.175">
                  <joint name="gripper_base_joint" pos="0 0 0" axis="0 0 1" range="-3.14 3.14"/>
                  <geom type="box" size="0.05 0.1 0.025" rgba="0 0 1 1"/>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>
</mujoco>